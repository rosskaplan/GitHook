#!/bin/sh

# get the message and get the file 
msg=$(git log --pretty=oneline -1)
files=$(git log --pretty="format:" --name-only -1)
hasher=$(msg::)

# call database to populate the database.
# in the file, it would also call functions to append / make a new wiki page depending on the tags obtained 
g++ ./scripts/callDatabase.cpp -o ./scripts/callDatabase
./scripts/callDatabase -e "$GIT_AUTHOR_EMAIL" -n "$GIT_AUTHOR_NAME" -d "$GIT_AUTHOR_DATE" -m "$msg" -f "$files"
